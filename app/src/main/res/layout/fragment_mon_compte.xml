<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nom_compte"
        android:layout_width="190dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/label_nom"
        app:layout_constraintTop_toBottomOf="@+id/label_nom" />

    <TextView
        android:id="@+id/email_compte"
        android:layout_width="258dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/label_email"
        app:layout_constraintTop_toBottomOf="@+id/label_email" />

    <TextView
        android:id="@+id/label_email"
        android:layout_width="98dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:text="Courriel"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/nom_compte"
        app:layout_constraintTop_toBottomOf="@+id/nom_compte" />

    <TextView
        android:id="@+id/label_nbreval"
        android:layout_width="315dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Nombre d'évaluation attribuées"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="@+id/email_compte"
        app:layout_constraintTop_toBottomOf="@+id/email_compte" />

    <Button
        android:id="@+id/decoBtn"
        android:layout_width="362dp"
        android:layout_height="67dp"
        android:layout_marginBottom="60dp"
        android:text="Déconnexion"
        android:textSize="16sp"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evalnbr_compte"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/label_moncompte"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="100dp"
        android:text="Mon compte"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nom"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/label_moncompte"
        app:layout_constraintTop_toBottomOf="@+id/label_moncompte" />

    <TextView
        android:id="@+id/evalnbr_compte"
        android:layout_width="73dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/label_nbreval"
        app:layout_constraintTop_toBottomOf="@+id/label_nbreval" />

</androidx.constraintlayout.widget.ConstraintLayout>